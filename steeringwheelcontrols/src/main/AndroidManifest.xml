<?xml version="1.0" encoding="utf-8"?>
<manifest
  package="com.osovskiy.bmwired.plugin.steeringwheelcontrols"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="com.osovskiy.bmwired.permission.RECEIVE_MSG"/>

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher"
    android:label="@string/app_name">
    <activity
      android:name="com.osovskiy.bmwired.plugin.steeringwheelcontrols.MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <receiver android:name="com.osovskiy.bmwired.plugin.steeringwheelcontrols.BusMessageReceiver">
      <intent-filter>
        <action android:name="com.osovskiy.bmwired.ACTION_NEW_BUS_MESSAGE"/>
      </intent-filter>
    </receiver>

    <meta-data
      android:name="plugin_author"
      android:value="Vadim Osovskiy"/>
  </application>

</manifest>
