<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

  <TextView
    android:id="@+id/textPluginName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:text="Plugin Name"
    android:textAppearance="?android:attr/textAppearanceMedium"/>

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/textPluginAuthor"
    android:text="Author:"
    android:textAppearance="?android:attr/textAppearanceSmall"/>

  <TextView
    android:id="@+id/textPluginAuthor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:text="Vadim Osovskiy"
    android:textAppearance="?android:attr/textAppearanceSmall"/>

  <TextView
    android:id="@+id/textPluginPackage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/textPluginAuthor"
    android:text="package.name.com"
    android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>