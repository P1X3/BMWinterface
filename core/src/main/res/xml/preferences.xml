<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
    android:key="@string/preference_category_general"
    android:title="@string/preference_category_general">
    <ListPreference
      android:defaultValue="@string/preference_interface_type_default"
      android:entries="@array/preference_interface_type_array"
      android:entryValues="@array/preference_interface_type_array"
      android:key="@string/preference_interface_type_key"
      android:summary="@string/preference_interface_type_summary"
      android:title="@string/preference_interface_type_title"/>
    <CheckBoxPreference
      android:defaultValue="@string/preference_reopen_interface_default"
      android:key="@string/preference_reopen_interface_key"
      android:summary="@string/preference_reopen_interface_summary"
      android:title="@string/preference_reopen_interface_title"/>
  </PreferenceCategory>
  <PreferenceCategory
    android:key="@string/preference_category_serial"
    android:title="@string/preference_category_serial">
    <EditTextPreference
      android:defaultValue="@string/preference_serial_name_default"
      android:key="@string/preference_serial_name_key"
      android:summary="@string/preference_serial_name_summary"
      android:title="@string/preference_serial_name_title"/>
    <EditTextPreference
      android:defaultValue="@string/preference_serial_port_default"
      android:inputType="number"
      android:key="@string/preference_serial_port_key"
      android:summary="@string/preference_serial_port_summary"
      android:title="@string/preference_serial_port_title"/>
  </PreferenceCategory>
  <PreferenceCategory
    android:key="@string/preference_category_bluetooth"
    android:title="@string/preference_category_bluetooth">
    <EditTextPreference
      android:defaultValue="@string/preference_bluetooth_mac_default"
      android:key="@string/preference_bluetooth_mac_key"
      android:summary="@string/preference_bluetooth_mac_summary"
      android:title="@string/preference_bluetooth_mac_title"/>
    <EditTextPreference
      android:defaultValue="@string/preference_bluetooth_attempts_default"
      android:inputType="number"
      android:key="@string/preference_bluetooth_attempts_key"
      android:summary="@string/preference_bluetooth_attempts_summary"
      android:title="@string/preference_bluetooth_attempts_title"/>
    <EditTextPreference
      android:defaultValue="@string/preference_bluetooth_delay_default"
      android:inputType="number"
      android:key="@string/preference_bluetooth_delay_key"
      android:summary="@string/preference_bluetooth_delay_summary"
      android:title="@string/preference_bluetooth_delay_title"/>
  </PreferenceCategory>
  <PreferenceCategory
    android:key="@string/preference_category_ioio"
    android:title="@string/preference_category_ioio">

  </PreferenceCategory>
</PreferenceScreen>